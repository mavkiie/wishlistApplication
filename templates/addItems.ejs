<!--INDEX HOME PAGE-->
<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<title>Create Wishlist</title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div id="addItems-container">
      <h1 class="header-styling">Add item to “<%= wishlist.title %>”</h1>
        <!--wishlist _.id is just the object id given to a wishlist in mongodb?-->
      <form action="/createWishlist/<%= wishlist.id %>/processAddToWishlist" method="post" enctype="multipart/form-data">
        <label class="form-qs">Name:  <input name="name"  required></label><br>
        <label class="form-qs">Price: <input name="price" required type="number" step="0.01"></label><br>
        <label class="form-qs">Category:
          <select name="category" required>
            <option value="Cute Stuff" selected>Cute Stuff</option>
            <option value="Home Necessities">Home Necessities</option>
            <option value="Clothing">Clothing</option>
            <option value="Accessories">Accessories</option>
            <option value="Miscellaneous">Miscellaneous</option>
          </select><br>
        </label>
        <!-- <label class="form-qs" >Priority:
          <select name="priority" required>
            <option value="low priority" selected>Low Priority</option>
            <option value="high"> High Priority</option>
          </select><br>
        </label> -->
        <label class="form-qs">Currency:
          <select name="currency" required>
            <option value="USD" selected>USD</option>
            <option value="EUR">EUR</option>
            <option value="GBP">GBP</option>
            <option value="JPY">JPY</option>
            <option value="CAD">CAD</option>
          </select>
        </label><br>
        <label class="form-qs" >Store: <input name="store"></label><br>
        <label class="form-qs" >Upload Image: <input type="file" name="itemImage" required></label><br>
        <input class= "submit-button-styling" type="submit" value="Add Item">
      </form>
    </div>
    
  
</body>

</html>