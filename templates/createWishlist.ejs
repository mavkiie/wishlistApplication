<!--INDEX HOME PAGE-->
<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
	<title>CREATE A WISHLIST</title>
</head>
<body>
    <div id="form-container">
        <h1 class="header-styling">Create Your Wishlist</h1>
        <form id="create-wishlist-form" action="/createWishlist" method="post">
            <p class="form-qs">What is the name of your wishlist?<br></p>
                <input class="wishlist-title-textbox" type="text" name="title" required><br>
     
            <p class="form-qs">Give a Description <br></p>
                <textarea class="text-box-sizing" name="description"></textarea><br>
            <input class="submit-button-styling" type="submit" value="Create Wishlist"><br>
        </form>
    </div>
    <div id="home-page-link-container">
        <a class="form-button-styling" href="<%= baseUrl %>">Home Page</a> <!-- a url to go back to home page-->
    </div>
</body>

</html>